$_['text_whatsapp_right']          = 'Right';
$_['text_whatsapp_left']           = 'Left';
$_['text_whatsapp_title']          = 'Button title';
$_['text_whatsapp_status_on']      = 'Enable';
$_['text_whatsapp_status_off']     = 'Disable';
$_['text_whatsapp_number']         = 'Number';
				]]>
			</add>
		</operation>
	</file>

